  <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;700&display=swap" rel="stylesheet" />

  <!-- Page Title -->
  <title>Digifianz's technical test</title>
</head>

<body>
  <!-- Confirmación de envío de mensaje -->
  <div id="capa">
    <div class="contenedor-flex-ventana-confirmacion">
      <div class="ventana-mensaje">
        <div class="title">¡Tu mensaje será enviado inmediatamente!
          <p class="title2">Al finalizar se te redirigirá al inicio del sitio</p>
        </div>
        <div class="buttons">
          <button type="submit" class="button btn-ok" value="Aceptar" id="ok">
            Aceptar
          </button>
        </div>
      </div>
    </div>
  </div>
  <!--  -->

  <!-- Navbar -->
  <div class="capa-opaca-oculta"></div>
  <nav>
    <div class="contenedor-flex-nav-items">
      <div class="logo"></div>
      <div class="nav-options">
        <div class="contenedor-ul">
          <div class="btn-cierre-menu"></div>
          <ul>
            <a href="#item-menu-1" class="a-option">
              <li>Item menu 1</li>
            </a>
            <a href="#item-menu-2" class="a-option">
              <li>Item menu 2</li>
            </a>
            <a href="#item-menu-3" class="a-option">
              <li>Item menu 3</li>
            </a>
            <button class="btn-sm">Button text</button>
            <button class="btn-lg">¡Hacé click aquí!</button>
          </ul>
        </div>
      </div>
      <div class="menu-hamb"></div>
    </div>
  </nav>

  <!-- Header -->
  <header>
    <div class="header">
      <div class="texto-header">
        <h1>Bienvenid@ al test de aptitudes técnicas de Digifianz</h1>
      </div>
    </div>
    <!-- <img id="img-sm" src="./assets/Hero-background-sm.png" alt="imagen de fondo Digifianz" />
    <img id="img-lg" src="./assets/Hero-background.jpg" alt="imagen de fondo Digifianz" /> -->
  </header>

  <!-- Section cards -->
  <div class="section-cards" id="item-menu-1">
    <div class="contenedor-cards">
      <div class="card">
        <div class="card-img" id="img-card-1"></div>
        <div class="text-card">
          <p>Hacé este ejercicio</p>
        </div>
      </div>
      <div class="card">
        <div class="card-img" id="img-card-2"></div>
        <div class="text-card">
          <p>Lo evaluaremos con nuestro equipo</p>
        </div>
      </div>
      <div class="card">
        <div class="card-img" id="img-card-3"></div>
        <div class="text-card">
          <p>Te sumás al equipo de Digifianz</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Section main -->
  <div class="contenedor-main" id="item-menu-2">
    <div class="contenedor-items-main">
      <div class="img-main"></div>
      <div class="main-text">
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras sed
